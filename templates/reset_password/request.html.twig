{% extends 'base.html.twig' %}

{% block title %} {{ 'respswrd'|trans({}, 'messages')|raw}}{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}
    <h1>{{ 'rpswrd'|trans({}, 'messages')|raw}}</h1>

    {{ form_start(requestForm) }}
        {{ form_row(requestForm.email) }}
        <div>
            <small>
                {{ 'messagereset'|trans({}, 'messages')|raw}}
            </small>
        </div>

        <button class="btn btn-primary">{{ 'sendpswrd'|trans({}, 'messages')|raw}}</button>
    {{ form_end(requestForm) }}
{% endblock %}
